{
    "name": "scalp/scalp",
    "description": "Some Scala useful classes ported to PHP.",
    "authors": [
        {
            "name": "Paweł Wacławczyk",
            "email": "p.a.waclawczyk@gmail.com"
        }
    ],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Scalp\\": "src/Scalp/"
        },
